extends base.pug

block style 
  style
    include ../static/style.css
    include ../static/styleContact.css

block content
  h1 Contact Us
  form(action="/contact", method ="post", class="myForm")
    label(for="Name", class="myLabel") NAME:
      input(type="text", name="name", class="myInput", id="name" placeholder="Enter your name")
    label(for="phone", class="myLabel", id="phone") MOBILE: 
      input(type="phone", name="phone", class="myInput" placeholder="Enter your Ph.no")
    label(for="email", class="myLabel") E-MAIL ID: 
      input(type="email", name="email", class="myInput" placeholder="Enter your email id")
    label(for="Address", class="myLabel") ADDRESS: 
      input(type="text", name="address", class="myInput" placeholder="Enter your address")
    label(for="desc", class="myLabel") TELL US MORE ABOUT YOU: 
    textarea(name="desc", class="myInput", id="textarea", placeholder="Tell us more about yourself" cols="30", rows="10") 

    button(class="btn")
      | SUBMIT